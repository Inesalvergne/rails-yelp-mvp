<h2> <%= @restaurant.name %></h2>

<p> <%= @restaurant.address %></p>

<h3> Reviews </h3>

<ul>
  <% @restaurant.reviews.each do |review| %>
    <p><%= review.content %> - <%= "⭐️" * review.rating %></p>

  <% end %>
</ul>

<div class="container">




      <%= simple_form_for [ @restaurant, @review ] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating %>
        <%= f.submit "Submit review", class: "btn btn-primary" %>
      <% end %>


</div>

